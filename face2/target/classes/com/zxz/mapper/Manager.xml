<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.zxz.mapper.ManagerMapper">
	<select id="logincheck" resultType="int">
		select count(*) from manager
		where m_name=#{m_name} and m_pass=#{m_pass}
	</select>  
	    <insert id="add" parameterType="Manager">
	        insert into dept ( dname,address ) values (#{dname},#{address})    
	    </insert>
	    
	    <delete id="delete" parameterType="Manager" >
	        delete from dept where id= #{id}   
	    </delete>
	    
	    <select id="get" parameterType="_int" resultType="Manager">
	        select * from   dept  where id= #{id}    
	    </select>

	    <update id="update" parameterType="Dept" >
	        update dept set dname=#{dname},address=#{address} where id=#{id}    
	    </update>
	    <select id="list" resultType="Dept">
	        select * from  dept      
	    </select>	
  
	</mapper>

